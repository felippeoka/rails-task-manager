<h1>Task</h1>

<h2><%= @task.title %> </h2>
<p><%= @task.details %></p>
<%= @task.completed %>

<p>
  <%= link_to 'Edit This Task', edit_task_path(@task) %>
</p>

<p>
  <%= link_to "Delete This Task",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</p>

<p>
  <%= link_to 'View All tasks', tasks_path %>
</p>
